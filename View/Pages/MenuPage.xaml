<Page x:Class="DobrinSerovControl.View.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DobrinSerovControl.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="300"
      Title="MenuPage">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Button Name="AddGroupBtn" Click="AddGroupBtn_Click" Height="50"
                    Content="Добавить группу" FontSize="20" 
                    HorizontalContentAlignment="Left" Width="280" 
                    Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Name="AddActivityBtn" Click="AddActivityBtn_Click" Height="50"
                    Content="Добавить активность" FontSize="20" 
                    HorizontalContentAlignment="Left" Width="280" 
                    Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Name="AccountingBtn" Click="AccountingBtn_Click" Height="50"
                    Content="Учёт" FontSize="20" 
                    HorizontalContentAlignment="Left" Width="280" 
                    Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Name="Report1Btn" Click="Report1Btn_Click" Height="50"
                    Content="Отчёт 1" FontSize="20" 
                    HorizontalContentAlignment="Left" Width="280" 
                    Background="{x:Null}" BorderBrush="{x:Null}"/>
            <Button Name="Report2Btn" Click="Report2Btn_Click" Height="50"
                    Content="Отчёт 2" FontSize="20" 
                    HorizontalContentAlignment="Left" Width="280" 
                    Background="{x:Null}" BorderBrush="{x:Null}"/>
        </StackPanel>
    </Grid>
</Page>
